<WelcomeScreen>:
    name: 'welcome'
    MDScreen: 
        MDFloatLayout:
            md_bg_color: (255/255, 224/255, 130/255, 1)
            
            Image:
                source: 'assets/images/app-logo.png'
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.83}
            
            Image:
                source: 'assets/images/image-A.png'
                size_hint: 0.8, 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            
            MDLabel:
                text: 'Culinary Creations, Shared with Passion!'
                font_name: 'Gagalin'
                font_size: '17sp'
                pos_hint: {'center_y': 0.36}
                halign: 'center'
                color: (51/255, 51/255, 51/255, 1)
            
            MDRaisedButton: 
                text: 'LOGIN'
                text_color: (51/255, 51/255, 51/255, 1)
                font_name: 'Gagalin'
                font_size: '18sp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.26}
                size_hint: 0.66, 0.07
                md_bg_color: (255/255, 193/255, 7/255, 1)
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'login'
                canvas.before:
                    Color:
                        rgb: (255/255, 193/255, 7/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5]
            
            MDRaisedButton: 
                text: 'SIGN UP'
                text_color: (51/255, 51/255, 51/255, 1)
                font_name: 'Gagalin'
                font_size: '18sp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.16}
                size_hint: 0.66, 0.07
                md_bg_color: (255/255, 248/255, 225/255, 1)
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'signup'
                canvas.before:
                    Color:
                        rgb: (255/255, 193/255, 7/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5]
