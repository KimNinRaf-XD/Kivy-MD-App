<MainScreen>:
    name: 'main'
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Recipe Hub'
            md_bg_color: (255/255, 193/255, 7/255, 1)

        MDBottomNavigation:
            panel_color: (255/255, 193/255, 7/255, 1)
            text_color_active: (51/255, 51/255, 51/255, 1)

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'

                MDFloatLayout:
                    id: recipes_layout
                    md_bg_color: (255/255, 248/255, 225/255, 1)


            MDBottomNavigationItem:
                name: 'add recipe'
                text: 'Add Recipe'
                icon: 'plus'

                MDFloatLayout:
                    md_bg_color: (255/255, 248/255, 225/255, 1)

                    MDLabel:
                        text: 'Add a Recipe'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '20sp'
                        halign: 'center'
                        pos_hint: {'center_y': 0.89}

                    MDLabel:
                        text: 'Name:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.58, 'center_y': 0.79}

                    MDTextField:
                        id: recipe_name
                        size_hint_x: 0.5
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.64, 'center_y': 0.79}

                    MDLabel:
                        text: 'Ingredients:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.58, 'center_y': 0.70}

                    MDTextField:
                        id: recipe_ingredients
                        size_hint_x: 0.5
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.64, 'center_y': 0.70}

                    MDLabel:
                        text: 'Instructions:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.58, 'center_y': 0.40}

                    MDTextField:
                        id: recipe_instructions
                        multiline: True
                        mode: 'rectangle'
                        size_hint: 0.5, 0.8
                        max_height: dp(230)
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.64, 'center_y': 0.40}

                    MDRectangleFlatButton:
                        text: 'Add Recipe'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '16sp'
                        line_width: 2
                        line_color: (255/255, 193/255, 7/255, 1)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.09}
                        on_release: root.add_recipe()

            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'
                
                MDFloatLayout:
                    md_bg_color: (255/255, 248/255, 225/255, 1)

                    MDLabel:
                        text: 'Account Settings'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '20sp'
                        halign: 'center'
                        pos_hint: {'center_y': 0.89}

                    MDLabel:
                        text: 'Name:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.61, 'center_y': 0.73}

                    MDLabel:
                        id: logged_in_name_label
                        text: ''
                        size_hint_x: 0.5
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.63, 'center_y': 0.73}

                    MDLabel:
                        text: 'Username:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.61, 'center_y': 0.62}

                    MDLabel:
                        id: logged_in_username_label
                        text: ''
                        size_hint_x: 0.5
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.63, 'center_y': 0.62}

                    MDLabel:
                        text: 'Password:'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '18sp'
                        pos_hint: {'center_x': 0.61, 'center_y': 0.51}

                    MDLabel:
                        id: logged_in_password_label
                        text: ''
                        size_hint_x: 0.5
                        hint_text_color_focus: (105/255, 105/255, 105/255, 1)
                        text_color_focus: (51/255, 51/255, 51/255, 1)
                        line_color_focus: (1, 193 / 255, 7 / 255, 1)
                        line_color_normal: (105/255, 105/255, 105/255, 1)
                        pos_hint: {'center_x': 0.63, 'center_y': 0.51}
                
                    MDRectangleFlatButton:
                        text: 'UPDATE ACCOUNT'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '16sp'
                        line_width: 2
                        line_color: (255/255, 193/255, 7/255, 1)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.36}

                    MDRaisedButton:
                        text: 'LOG OUT'
                        text_color: (51/255, 51/255, 51/255, 1)
                        font_name: 'Gagalin'
                        font_size: '16sp'
                        md_bg_color: (255/255, 224/255, 130/255, 1)
                        pos_hint: {'center_x': 0.27, 'center_y': 0.14}
                        on_release:
                            root.logout()

                    MDRaisedButton:
                        text: 'DELETE ACCOUNT'
                        text_color: (255/255, 255/255, 255/255, 1)
                        font_name: 'Gagalin'
                        font_size: '16sp'
                        md_bg_color: (255/255, 0/255, 0/255, 1)
                        pos_hint: {'center_x': 0.66, 'center_y': 0.14}


