
MDCard:
    orientation: 'vertical'
    size_hint: None, None
    size: 300, self.minimum_height
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    padding: 25
    spacing: 25

    MDLabel:
        id: title
        text_color: (51/255, 51/255, 51/255, 1)
        font_name: 'Gagalin'
        font_size: '20sp'
        pos_hint: {'center_y': 0.7}
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        id: ingredients
        text_color: (51/255, 51/255, 51/255, 1)
        font_name: 'Gagalin'
        font_size: '14sp'
        pos_hint: {'center_y': 0.6}
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        id: instructions
        text_color: (51/255, 51/255, 51/255, 1)
        font_name: 'Gagalin'
        font_size: '14sp'
        pos_hint: {'center_y': 0.5}
        size_hint_y: None
        height: self.texture_size[1]